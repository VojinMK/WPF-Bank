<Window x:Class="WPFBanka.Forme.FrmKredit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBanka.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni kredit" Height="360" Width="370"  Background="LightGray">
    <Grid>
        <Label Content="Iznos" HorizontalAlignment="Left" Margin="42,28,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtIznos" HorizontalAlignment="Left" Height="23" Margin="184,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Kamata" HorizontalAlignment="Left" Margin="42,65,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtKamata" HorizontalAlignment="Left" Height="23" Margin="184,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Mesečna rata" HorizontalAlignment="Left" Margin="42,101,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtMesecnaRata" HorizontalAlignment="Left" Height="23" Margin="184,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Početak otplaćivanja" HorizontalAlignment="Left" Margin="42,142,0,0" VerticalAlignment="Top"/>
        <DatePicker Name="dpPocetakOtplacivanja" HorizontalAlignment="Left" Margin="202,142,0,0" VerticalAlignment="Top"/>
        <Label Content="Završetak otplaćivanja" HorizontalAlignment="Left" Margin="42,183,0,0" VerticalAlignment="Top"/>
        <DatePicker Name="dpZavrsetakOtplacivanja" HorizontalAlignment="Left" Margin="203,183,0,0" VerticalAlignment="Top"/>
        <Label Content="Račun" HorizontalAlignment="Left" Margin="42,234,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.821,0.756"/>
        <ComboBox Name="cbRacun" HorizontalAlignment="Left" Margin="184,234,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Račun" SelectedValuePath="RačunID"/>
        <Button Name="btnSacuvaj" Content="Sačuvaj" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnSacuvaj_Click" HorizontalAlignment="Left" Margin="42,279,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnOtkazi_Click" HorizontalAlignment="Left" Margin="230,279,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
