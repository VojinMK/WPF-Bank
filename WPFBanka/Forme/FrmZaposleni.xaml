<Window x:Class="WPFBanka.Forme.FrmZaposleni"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBanka.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni zaposlenog " Height="350" Width="370"  Background="LightGray">
    <Grid>
        <Label Content="Ime" HorizontalAlignment="Left" Margin="49,14,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtIme" HorizontalAlignment="Left" Height="23" Margin="170,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Prezime" HorizontalAlignment="Left" Margin="49,59,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPrezime" HorizontalAlignment="Left" Height="23" Margin="170,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Sektor rada" HorizontalAlignment="Left" Margin="49,103,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSektorRada" HorizontalAlignment="Left" Height="23" Margin="170,103,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="JMBG" HorizontalAlignment="Left" Margin="49,141,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtJmbg" HorizontalAlignment="Left" Height="23" Margin="170,141,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Adresa" HorizontalAlignment="Left" Margin="49,180,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtAdresa" HorizontalAlignment="Left" Height="23" Margin="170,180,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Kontakt" HorizontalAlignment="Left" Margin="49,225,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtKontakt" HorizontalAlignment="Left" Height="23" Margin="170,225,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Name="btnSacuvaj" Content="Sačuvaj" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnSacuvaj_Click" HorizontalAlignment="Left" Margin="37,273,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Name="btnOtkazi" Content="Otkaži" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnOtkazi_Click" HorizontalAlignment="Left" Margin="239,273,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
