<Window x:Class="WPFBanka.Forme.FrmKlijent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBanka.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni klijenta" Height="350" Width="370" Background="LightGray">
    <Grid>
        <Label Content="Ime" HorizontalAlignment="Left" Margin="78,34,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtIme" HorizontalAlignment="Left" Height="23" Margin="160,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Prezime" HorizontalAlignment="Left" Margin="76,71,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPrezime" HorizontalAlignment="Left" Height="23" Margin="160,71,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="JMBG" HorizontalAlignment="Left" Margin="76,102,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.665,-0.953"/>
        <TextBox x:Name="txtJmbg" HorizontalAlignment="Left" Height="23" Margin="160,105,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Grad" HorizontalAlignment="Left" Margin="78,143,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtGrad" HorizontalAlignment="Left" Height="23" Margin="160,143,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Adresa" HorizontalAlignment="Left" Margin="78,184,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAdresa" HorizontalAlignment="Left" Height="23" Margin="160,184,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Kontakt" HorizontalAlignment="Left" Margin="78,226,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.41,-3.18"/>
        <TextBox Name="txtKontakt" HorizontalAlignment="Left" Height="23" Margin="160,229,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.502,0.348"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnSacuvaj_Click" HorizontalAlignment="Left" Margin="54,280,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnOtkazi_Click" HorizontalAlignment="Left" Margin="227,280,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
