<Window x:Class="WPFBanka.Forme.FrmTipRacuna"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBanka.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni tip racuna" Height="200" Width="300"  Background="LightGray">
    <Grid>
        <Label Content="Naziv tipa računa" HorizontalAlignment="Left" Margin="22,42,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTipRacuna" HorizontalAlignment="Left" Height="23" Margin="142,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnSacuvaj_Click" HorizontalAlignment="Left" Margin="48,131,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnOtkazi_Click" HorizontalAlignment="Left" Margin="179,131,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
