<Window x:Class="WPFBanka.Forme.FrmRacun"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBanka.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni račun" Height="300" Width="370"  Background="LightGray">
    <Grid>
        <Label Content="Stanje na računu" HorizontalAlignment="Left" Margin="50,29,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtStanjeNaRacunu" HorizontalAlignment="Left" Height="23" Margin="193,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Broj računa" HorizontalAlignment="Left" Margin="50,78,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBrojRacuna" HorizontalAlignment="Left" Height="23" Margin="193,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Klijent" HorizontalAlignment="Left" Margin="50,126,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cbKlijent" HorizontalAlignment="Left" Margin="193,126,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Klijent" SelectedValuePath="KlijentID"/>
        <Label Content="Tip računa" HorizontalAlignment="Left" Margin="50,169,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="cbTipRacuna" HorizontalAlignment="Left" Margin="193,169,0,0" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.298,-0.062" DisplayMemberPath="NazivTipaRačuna" SelectedValuePath="TipRačunaID"/>
        <Button Name="btnSacuvaj" Content="Sačuvaj" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnSacuvaj_Click" HorizontalAlignment="Left" Margin="50,221,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnOtkazi_Click" HorizontalAlignment="Left" Margin="238,221,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
