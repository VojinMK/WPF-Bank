<Window x:Class="WPFBanka.Forme.FrmTipKartice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBanka.Forme"
        mc:Ignorable="d"
        Title="Dodaj/Izmeni tip kartice" Height="200" Width="300"  Background="LightGray">
    <Grid>
        <Label Content="Naziv tipa kartice" HorizontalAlignment="Left" Margin="32,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTipKartice" HorizontalAlignment="Left" Height="23" Margin="150,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnSacuvaj_Click" HorizontalAlignment="Left" Margin="32,128,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnOtkazi_Click" HorizontalAlignment="Left" Margin="195,128,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
