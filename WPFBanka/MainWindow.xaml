<Window x:Class="WPFBanka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBanka"
        mc:Ignorable="d"
        Title="Banka" Height="370" Width="710" Background="LightGray" >
    <Grid>
        <DataGrid Name="dataGridCentralni" HorizontalAlignment="Center" Height="auto" MaxHeight="275" VerticalAlignment="Center" Width="auto" IsReadOnly="True"
                 AlternatingRowBackground="LightGray" CanUserAddRows="False" SelectionUnit="FullRow" SelectionMode="Single"/>
        <StackPanel HorizontalAlignment="Center" Height="30" VerticalAlignment="Top" Width="auto" Orientation="Horizontal">
            <Button x:Name="btnKlijenti" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnKlijenti_Click" Content="Klijenti" Width="80"/>
            <Button x:Name="btnZaposleni" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnZaposleni_Click" Content="Zaposleni" Width="80"/>
            <Button x:Name="btnRacuni" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnRacuni_Click" Content="Računi" Width="80"/>
            <Button x:Name="btnTipoviRacuna" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnTipoviRacuna_Click" Content="Tipovi računa" Width="80"/>
            <Button x:Name="btnTransakcije" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnTransakcije_Click" Content="Transakcije" Width="80"/>
            <Button x:Name="btnKrediti" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnKrediti_Click" Content="Krediti" Width="80"/>
            <Button x:Name="btnKartice" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnKartice_Click" Content="Kartice" Width="80"/>
            <Button x:Name="btnTipoviKartice" Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnTipoviKartice_Click" Content="Tipovi kartice" Width="80"/>

        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Height="30" VerticalAlignment="Bottom" Width="360" Orientation="Horizontal">
            <Button x:Name="btnDodaj"  Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnDodaj_Click" Content="Dodaj" Width="120"/>
            <Button x:Name="btnIzmeni"  Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnIzmeni_Click" Content="Izmeni" Width="120"/>
            <Button x:Name="btnObrisi"  Background="SlateGray" Foreground="White" BorderBrush="White" Click="btnObrisi_Click" Content="Obriši" Width="120"/>
        </StackPanel>

    </Grid>
</Window>
